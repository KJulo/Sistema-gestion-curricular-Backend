// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator erd {
  provider = "prisma-erd-generator"
}

model administrador {
  id         String @id @default(uuid())
  id_colegio String
  nombres    String
  apellidos  String
  rut        String
  contrasena String

  colegio colegio @relation(fields: [id_colegio], references: [id])
}

model apoderado {
  id                 String   @id @default(uuid())
  nombres            String
  apellidos          String
  rut                String
  contrasena         String
  correo             String
  telefono           String
  telefonoEmergencia String
  direccion          String
  alumno             alumno[]
}

model colegio {
  id        String  @id @default(uuid())
  nombre    String
  direccion String
  imagen    String?

  administrador administrador[]
  alumno        alumno[]
}

model alumno {
  id           String  @id @default(uuid())
  id_apoderado String?
  id_colegio   String
  id_curso     String?
  nombres      String
  apellidos    String
  rut          String
  correo       String
  contrasena   String

  asistencia asistencia[]
  nota       nota[]
  curso      curso?       @relation(fields: [id_curso], references: [id])
  apoderado  apoderado?   @relation(fields: [id_apoderado], references: [id])
  colegio    colegio      @relation(fields: [id_colegio], references: [id])
}

model profesor {
  id         String       @id @default(uuid())
  id_colegio String
  nombres    String
  apellidos  String
  rut        String
  correo     String
  contrasena String
  asignatura asignatura[]
  curso      curso[]
}

model curso {
  id               String             @id @default(uuid())
  nombre           String
  anho             String
  paralelo         String
  id_profesor      String?
  asignatura       asignatura[]
  alumno           alumno[]
  curso_asignatura curso_asignatura[]
  notificacion     notificacion[]
  profesor         profesor?          @relation(fields: [id_profesor], references: [id])
}

model notificacion {
  id          String   @id @default(uuid())
  id_curso    String
  titulo      String
  descripcion String
  fecha       DateTime

  curso curso @relation(fields: [id_curso], references: [id])
}

model curso_asignatura {
  id            String @id @default(uuid())
  id_curso      String
  id_asignatura String

  curso      curso      @relation(fields: [id_curso], references: [id])
  asignatura asignatura @relation(fields: [id_asignatura], references: [id])
}

model asignatura {
  id          String       @id @default(uuid())
  id_curso    String
  id_profesor String
  nombre      String
  asistencia  asistencia[]
  nota        nota[]
  foro        foro[]
  horario     horario[]
  curso       curso        @relation(fields: [id_curso], references: [id])

  profesor         profesor           @relation(fields: [id_profesor], references: [id])
  curso_asignatura curso_asignatura[]
}

model horario {
  id            String @id @default(uuid())
  id_asignatura String
  dia           String
  horaInicio    String
  horaTermino   String

  asignatura asignatura @relation(fields: [id_asignatura], references: [id])
}

model asistencia {
  id            String      @id @default(uuid())
  id_alumno     String?
  id_asignatura String?
  asistencia    String
  fecha         DateTime
  alumno        alumno?     @relation(fields: [id_alumno], references: [id])
  asignatura    asignatura? @relation(fields: [id_asignatura], references: [id])
}

model nota {
  id            String   @id @default(uuid())
  id_alumno     String
  id_asignatura String?
  nombre        String
  ponderacion   String
  fecha         DateTime
  descripcion   String

  asignatura asignatura? @relation(fields: [id_asignatura], references: [id])
  alumno     alumno?     @relation(fields: [id_alumno], references: [id])
}

model foro {
  id            String      @id @default(uuid())
  id_asignatura String?
  tipo          String?
  titulo        String
  contenido     contenido[]
  asignatura    asignatura? @relation(fields: [id_asignatura], references: [id])
}

model contenido {
  id          String @id @default(uuid())
  id_foro     String
  titulo      String
  descripcion String
  tipo        String

  archivo archivo[]
  foro    foro      @relation(fields: [id_foro], references: [id])
}

model archivo {
  id           String @id @default(uuid())
  id_contenido String
  nombre       String
  archivo      String

  contenido contenido @relation(fields: [id_contenido], references: [id])
}
